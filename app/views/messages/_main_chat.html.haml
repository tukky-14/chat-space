.main-chat
  .main-top
    .main-top__info
      %ul.main-top__info__list
        %li.main-top__info__list__name 
          = @group.name
        %li.main-top__info__list__edit
          = link_to 'Edit', edit_group_path(current_user), class: "main-top__info__list__edit__text" 
      %p.main-top__info__member
        Memberï¼š
        - @group.users.each do |user|
          = user.name
          

  .main-list
    = render @messages

  .main-form
    = form_for [@group, @message] do |f|
      .main-form__box__new
        = f.text_field :content, class: "main-form__box__new__text", placeholder: "type a message"
        = f.label :image, class: "main-form__box__new__image" do
          = icon('far', 'image')
          = f.file_field :image, class: "main-form__box__new__image__data"
      = f.submit "Send", class: "main-form__box__send"