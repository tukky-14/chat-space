.main-chat
  .main-top
    .main-top__info
      %ul.main-top__info__list
        %li.main-top__info__list__name 
          = @group.name
        %li.main-top__info__list__edit
          = link_to 'Edit', edit_group_path(current_user), class: "main-top__info__list__edit__text" 
      %p.main-top__info__member
        Member：
        - @group.users.each do |user|
          = user.name
          

  .main-list
    = render @messages

  -# form_for適用前
  -# .main-form
